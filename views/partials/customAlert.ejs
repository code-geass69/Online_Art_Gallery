<!-- views/partials/customAlert.ejs -->
<style>
    /* Modal styles */
    #customAlert {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
    }

    #alertBox {
        font-family: 'Poppins', sans-serif;
        background: white;
        margin: 15% auto;
        padding: 40px;
        border: 2px solid #000;
        width: 50%;
        max-width: 450px;
        text-align: center;
        border-radius: 15px;
        font-weight: bold;
    }

    .closeBtn {
        background: linear-gradient(108.4deg, rgb(253, 44, 56) 3.3%, rgb(176, 2, 12) 98.4%);
        color: white;
        margin-top: 20px;
        padding: 10px;
        border: none;
        cursor: pointer;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        font-size: 13px;
        line-height: 1;
        /* display: flex; */
        align-items: center;
        justify-content: center;
    }

    .closeBtn:hover {
        background: radial-gradient(circle at 1.3% 2.8%, rgb(239, 249, 249) 0%, rgb(182, 199, 226) 100.2%);
        color: black;
    }

    #thankYouMessage {
        display: block;
        margin-top: 5px;
        font-weight: bold;
        font-size: 20px;
    }
</style>

<div id="customAlert">
    <div id="alertBox">
        <p id="alertMessage"></p>
        <span id="thankYouMessage"></span>
        <button class="closeBtn" onclick="closeAlert()"><span style="padding-bottom: 20px;">X</span></button>
    </div>
</div>